---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../styles/main.css';
import '../styles/variables.css';

import '../styles/vendor/bootstrap/css/bootstrap.min.css';
import '../styles/vendor/bootstrap-icons/bootstrap-icons.css';
import '../styles/vendor/swiper/swiper-bundle.min.css';
import '../styles/vendor/glightbox/css/glightbox.min.css';
import '../styles/vendor/aos/aos.css';

import '../styles/gallery.min.css';
import '../styles/gallery.theme.css';

const {title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="utf-8">
		<meta content="width=device-width, initial-scale=1.0" name="viewport">

		<title>{title}</title>
		<meta content="" name="description">
		<meta content="" name="keywords">

		<!-- Favicons -->
		<!-- <link href="assets/img/favicon.png" rel="icon">
		<link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon"> -->

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;500&family=Inter:wght@400;500&family=Playfair+Display:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
		
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
	</head>

	<body>
		<Header />
		<slot />
		<Footer />
		<a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
		
		<!-- Template Main JS File -->
		<script type="module" hoist>
			import '../styles/js/main.js';
			
			import '../styles/vendor/aos/aos.js'
			import '../styles/vendor/bootstrap/js/bootstrap.bundle.min.js'
			import '../styles/vendor/swiper/swiper-bundle.min.js'
			import '../styles/vendor/glightbox/js/glightbox.min.js'
			import '../styles/vendor/php-email-form/validate.js'
		</script>
		<script>
			declare global {
				interface Window {
					netlifyIdentity: any;
				} 
			}
			if (window.netlifyIdentity) {
			  window.netlifyIdentity.on("init", ((user: any) => {
				if (!user) {
				  window.netlifyIdentity.on("login", () => {
					document.location.href = "/admin/";
				  });
				}
			  }));
			}
		  </script>

	</body>
</html>